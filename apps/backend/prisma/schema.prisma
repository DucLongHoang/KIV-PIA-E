// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed     = "ts-node prisma/seeds/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  orionLogin      String       @unique @map("orion_login")
  role            UserRole
  email           String
  fullName        String       @map("full_name")
  password        String
  departmentId    Int?         @map("department_id")
  department      Department?  @relation(fields: [departmentId], references: [id])
  allocations     Allocation[]
  managedProjects Project[]

  superiorId   Int?
  superior     User?  @relation("SuperiorSubordinate", fields: [superiorId], references: [id])
  subordinates User[] @relation("SuperiorSubordinate")

  managedDepartment Department? @relation("DepartmentManager")
}

enum UserRole {
  SUBORDINATE
  SUPERIOR
  SECRETARIAT
}

model Project {
  id           Int          @id @default(autoincrement())
  name         String
  description  String?
  from         DateTime
  to           DateTime?
  allocations  Allocation[]
  managerId    Int          @map("manager_id")
  departmentId Int          @map("department_id")

  manager    User       @relation(fields: [managerId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
}

model Department {
  id                Int       @id @default(autoincrement())
  name              String
  managerId         Int?      @unique @map("manager_id")
  manager           User?     @relation("DepartmentManager", fields: [managerId], references: [id])
  projects          Project[]
  departmentWorkers User[]
}

model Allocation {
  id          Int             @id @default(autoincrement())
  projectId   Int             @map("project_id")
  workerId    Int             @map("worker_id")
  from        DateTime
  to          DateTime
  scope       Float
  description String?
  state       AllocationState

  project Project @relation(fields: [projectId], references: [id])
  worker  User    @relation(fields: [workerId], references: [id])
}

enum AllocationState {
  DRAFT
  CANCELLED
  PAST
  ACTIVE
}
